<!DOCTYPE html>
<html lang="en">
  <%- include('partials/adminHead', { title: "Edit Book" }) %>
  <body class="bg-light">
    <%- include('partials/adminNav') %>

    <div class="container mt-5">
      <div class="card shadow p-4">
        <h2 class="mb-4">Edit Book</h2>
        <form
          action="/admin/books/edit/<%= book.id %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group mb-4">
            <label for="title" class="form-label">Book Title:</label>
            <input
              type="text"
              name="title"
              class="form-control shadow-sm"
              value="<%= book.title %>"
              required
            />
          </div>

          <div class="form-group mb-4">
            <label for="description" class="form-label">Description:</label>
            <textarea
              name="description"
              class="form-control shadow-sm"
              rows="5"
              required
            >
<%= book.description %></textarea
            >
          </div>

          <div class="form-group mb-4">
            <label for="amazonLink" class="form-label">Amazon Link:</label>
            <input
              type="url"
              name="amazonLink"
              class="form-control shadow-sm"
              value="<%= book.amazonLink %>"
              required
            />
          </div>

          <div class="form-group mb-4">
            <label for="coverImage" class="form-label">Cover Image:</label>
            <input
              type="file"
              name="coverImage"
              class="form-control shadow-sm"
            />
            <img
              src="<%= book.coverImage %>"
              alt="<%= book.title %>"
              class="img-thumbnail mt-3"
              style="width: 100px; height: auto"
            />
          </div>

          <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-success px-4">
              Update Book
            </button>
            <a href="/admin/books" class="btn btn-secondary px-4 ms-2"
              >Cancel</a
            >
          </div>
        </form>
      </div>
    </div>

    <%- include('partials/adminFooter') %>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <%- include('partials/adminHead', { title: "Books" }) %>
  <body class="bg-light">
    <%- include('partials/adminNav') %>

    <div class="container my-5">
      <h2>All Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Amazon Link</th>
            <th>Cover Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.description %></td>
            <td>
              <a href="<%= book.amazonLink %>" target="_blank">Buy on Amazon</a>
            </td>
            <td>
              <img
                src="<%= book.coverImage %>"
                alt="<%= book.title %>"
                style="width: 50px"
              />
            </td>
            <td>
              <a
                href="/admin/books/edit/<%= book.id %>"
                class="btn btn-warning btn-sm mb-2"
                >Edit</a
              >
              <form
                action="/admin/books/delete/<%= book.id %>"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/admin/books/add" class="btn btn-primary mt-3">Add New Book</a>
    </div>

    <%- include('partials/adminFooter') %>
  </body>
</html>
